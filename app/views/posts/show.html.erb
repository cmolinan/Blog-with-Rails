<div class="user_bio"
  <b>Post by <%= @user.name %></b>
  <p>Comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %> </p>
  <p>Title: <%= @post.title %></p>
  <p><%= @post.text %></p>  
</div>

<div class='div-comments'>
  <% @post.five_recent_comments(@post.id).each do |comment| %>
     <div class='comments'>
        <span style="font-weight :bold font-size: 10px">Username <%= comment.user_id %>:</span> <%= comment.text %>
      </div>
  <% end %>        
</div>
        
