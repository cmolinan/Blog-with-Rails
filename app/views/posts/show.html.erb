<div class="post_header">
  <div class="post-show-header">
    <div class="ps-name">
      Post by <%= @user.name %>
    </div>
    <div class="ps-counters">
      Comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %>
    </div>
  </div>

  <p><%= @post.title %></p>
  <p><%= @post.text %></p>  
</div>

<%= form_with model: @like, url: user_post_likes_path(@user, @post) do |form| %>
  <div>
    <%= form.button "Add a like !", type: "submit" %>
  </div>
<% end %>

<% flash.each do |key, value| %>
  <span class='flash_<%= key %>'><%= value %></span>
<% end %> 

<%= render partial: "shared/comments", locals: {post: @post } %>

<button>
  <%= link_to 'Add a Comment', new_user_post_comment_path(@user, @post) %>
</button>

<%= link_to "Back", user_posts_path(@user) %>
