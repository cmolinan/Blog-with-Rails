
<%= render partial: "shared/user", locals: {user: @user } %>

<div class='user_bio' >
  <b>Bio</b>
  <div>
    <p><%= @user.bio %></p>
  </div>
</div>



<% @user.three_recent_posts(@user.id).to_enum.with_index.reverse_each do |post, index| %>
  <%= render partial: "shared/post", locals: {post: post, index: index } %>  
<% end %>

<div class='user_button'>
  <button>
    <%= link_to 'See all posts', user_posts_path(@user) %>
  </button>

  <button>
    <%= link_to 'New Post', new_user_post_path(@user) %>
  </button>
</div>

<%= link_to 'Back' , users_url %>

<% if false %>
<% end %>

